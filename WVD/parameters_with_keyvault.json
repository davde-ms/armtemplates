{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "value": "canadacentral",
            "metadata": {
                "description": "Region where we will deploy"
              }
        },
        "vmPrefix": {
            "value": "MyCorp-DC",
            "metadata": {
                "description": "Prefix used to build the virtual machine name"
              }
        },
        "vmSuffix": {
            "value": "",
            "metadata": {
                "description": "Suffix to build the virtual machhine name"
              }
        },
        "vmSuffixStartNumber": {
            "value": 2,
            "metadata": {
                "description": "Counter used between the prefix and the suffix to build the virtual machine name. If only entering a single digit number we will pad a zero to the left. Padding can be modified by changing the Pad function in the variables secion of the template. End result will look like prefix01suffix"
              }
        },
        "owner": {
            "value": "davde@microsoft.com",
            "metadata": {
                "description": "Resource owner email address"
              }
        },
        "environment": {
            "value": "Production",
            "metadata": {
                "description": "Deployment environment"
              }
        },
        "costCenter": {
            "value": "302039",
            "metadata": {
                "description": "Resource associated cost center"
              }
        },
        "networkSecurityGroupRules": {
            "value": [
                {
                    "name": "RDP",
                    "properties": {
                        "priority": 300,
                        "protocol": "TCP",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "3389"
                    }
                }
            ]
        },
        "subnetName": {
            "value": "Infra",
            "metadata": {
                "description": "Subnet where we will spin the VM"
              }
        },
        "virtualNetworkId": {
            "value": "/subscriptions/5a964cf5-1aeb-4356-b3a1-c76337b405da/resourceGroups/rg_vnet_can_central/providers/Microsoft.Network/virtualNetworks/vnet_canadacentral",
            "metadata": {
                "description": "Make sure to replace the subscriptionID, vnetresourcegroupename and vnetname in the string above"
              }
        },
        "publicIpAddressType": {
            "value": "Dynamic"
        },
        "publicIpAddressSku": {
            "value": "Basic"
        },
        "osDiskType": {
            "value": "StandardSSD_LRS"
        },
        "osDiskSize": {
            "value": 128
        },
        "dataDisks": {
            "value": [
                {
                    "lun": 0,
                    "createOption": "attach",
                    "caching": "None",
                    "writeAcceleratorEnabled": false,
                    "id": null,
                    "storageAccountType": null,
                    "diskSizeGB": null,
                    "diskEncryptionSet": {
                        "id": null
                    }
                }
            ]
        },
        "dataDiskResources": {
            "value": [
                {
                    "sku": "StandardSSD_LRS",
                    "properties": {
                        "diskSizeGB": 32,
                        "creationData": {
                            "createOption": "empty"
                        }
                    }
                }
            ]
        },
        "virtualMachineSize": {
            "value": "Standard_DS1_v2"
        },
        "localAdminUsername": {
            "reference": {
              "keyVault": {
              "id": "/subscriptions/5a964cf5-1aeb-4356-b3a1-c76337b405da/resourceGroups/rg_mycorpkeyvault/providers/Microsoft.KeyVault/vaults/mycorpkeyvault"
              },
              "secretName": "localAdminUsername"
            }
          },
        "localAdminUserPassword": {
            "reference": {
              "keyVault": {
              "id": "/subscriptions/5a964cf5-1aeb-4356-b3a1-c76337b405da/resourceGroups/rg_mycorpkeyvault/providers/Microsoft.KeyVault/vaults/mycorpkeyvault"
              },
              "secretName": "localAdminPassword"
            }
          },
        "availabilitySetName": {
            "value": "MyCorp-Infra-AD-AS"
        },
        "availabilitySetPlatformFaultDomainCount": {
            "value": 2
        },
        "availabilitySetPlatformUpdateDomainCount": {
            "value": 5
        },
        "autoShutdownStatus": {
            "value": "Enabled"
        },
        "autoShutdownTime": {
            "value": "19:00"
        },
        "autoShutdownTimeZone": {
            "value": "US Eastern Standard Time"
        },
        "autoShutdownNotificationStatus": {
            "value": "Enabled"
        },
        "autoShutdownNotificationLocale": {
            "value": "en"
        },
        "autoShutdownNotificationEmail": {
            "value": "davde@microsoft.com"
        }
    }
}